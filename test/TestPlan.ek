func intTestCase()
{
    {
        TEST((4 + 3) == 7, "i + i");
        TEST((4 - 3) == 1, "i - i");
        TEST((3 * 2) == 6, "i * i");
        //TEST((3 / 2) == 1, "i / i");
    }

    {
        int a = 1;
        TEST(a == 1, "a == 1");

        int b = (a + 1);
        TEST(b == 2 && a == 1, "b = (a + 1)");

        int c = ++a;
        TEST(c == 2 && a == 2, "c = ++a");
    }
}

